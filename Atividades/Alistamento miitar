from datetime import date
atua=date.today().year
nasc=int(input('escreva o seu ano de nascimento:'))
idade=atua-nasc
print(' a sua idade é {}'.format(idade))
if idade<=0  and idade<=100:
    print('os valores que você digitou não são validos ou você já passou do tempo de se alistar ')

elif idade>=18:
    print('infelizmente já passou o seu ano de alistamento')

elif idade<=18:
    print('felizmente ainda falta {}anos para você se alistar'.format(idade))

else:
    print('já está na hora de se alistar')
