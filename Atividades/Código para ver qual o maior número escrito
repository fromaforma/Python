num1=int(input('escreva o primeiro número desejado:'))
num2=int(input('escrev o segundo número desejado:'))
num3= int(input('escreva o terceiro número desejado:'))
menor=num1
if num2<=num1 and num2<=num3:
    menor=num2
if num3<=num2 and num3<=num1:
    menor=num3
maior=num1
if num2>=num1 and num2>=num3:
    maior=num2
if num3>=num2 and num3>=num1:
    maior=num3
print('o menor número é igual á {} ,enquanto o maior número é igual á: {} '.format(menor,maior))    
